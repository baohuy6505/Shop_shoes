        <h3 class="detail__info-title">{{product.productName}}</h3>
        <p class="detail__info-price">{{formatCurrency product.price}}</p>

        <form
          action="/Cart/add-To-Cart"
          method="post"
          class="form-info"
          id="form-info"
        >
          <input type="hidden" name="productId" value="{{product._id}}" />
         <div class="detail__color" style="margin-bottom: 15px;">
    <p style="margin-bottom: 5px;" class="detail__color-title">Màu sắc</p>
    
    <div class="custom-selection-group">
        {{#each colors}}
        <label class="custom-option-label">
            <input type="radio" name="color" value="{{this}}" class="custom-radio-input" required />
            <span class="custom-box color-style">{{this}}</span>
        </label>
        {{/each}}
    </div>
</div>

<div class="detail__size" style="margin-bottom: 20px;">
    <p style="margin-bottom: 5px;" class="detail__color-title">Kích thước</p>
    
    <div class="custom-selection-group">
        {{#each sizes}}
        <label class="custom-option-label">
            <input type="radio" name="size" value="{{this}}" class="custom-radio-input" required />
            <span class="custom-box size-style">{{this}}</span>
        </label>
        {{/each}}
    </div>
</div>

          <div class="detail__quantity">
            <label for="quantity">Số lượng:</label>
            <div class="detail__quantity-control">
              <button
                type="button"
                class="detail__quantity-btn"
                id="decrease"
                disabled
              >
                -
              </button>
              <input
                type="text"
                id="quantity"
                name="quantity"
                class="detail__quantity-inp"
                value="1"
              />
              <button type="button" class="detail__quantity-btn" id="increase">
                +
              </button>
            </div>
          </div>

          <button class="detail__pay">Mua ngay</button>
          <button class="detail__add">Thêm vào giỏ hàng</button>
        </form>
      </div>
    </div>
    <!-- Mô tả sản phẩm -->
    <div class="detail__desc">
      <h3 class="detail__desc-title">Mô tả sản phẩm</h3>

      <div class="detail__desc-content">
        <!-- Bảng thông số -->
        <div class="detail__specs">
          <table class="detail__specs-table">
            <tbody>
              <tr class="detail__spec-row">
                <th class="detail__spec-name">Thương hiệu</th>
                <td class="detail__spec-value">Nike</td>
              </tr>
              <tr class="detail__spec-row">
                <th class="detail__spec-name">Mẫu mã</th>
                <td class="detail__spec-value">Air Max 270</td>
              </tr>
              <tr class="detail__spec-row">
                <th class="detail__spec-name">Chất liệu</th>
                <td class="detail__spec-value">Da tổng hợp + Lưới</td>
              </tr>
              <tr class="detail__spec-row">
                <th class="detail__spec-name">Màu sắc</th>
                <td class="detail__spec-value">Đỏ / Xanh / Đen</td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Text mô tả bên cạnh bảng -->
        <div class="detail__text">
          <p>
            {{product.description}}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>