            <img src="./img/banner2.jpeg" alt="" class="detail__thumb" />
            <img src="./img/banner3.jpeg" alt="" class="detail__thumb" />
            <img src="./img/banner1.jpeg" alt="" class="detail__thumb" />
            <img src="./img/banner2.jpeg" alt="" class="detail__thumb" />
            <img src="./img/banner1.jpeg" alt="" class="detail__thumb" />
            <img src="./img/banner2.jpeg" alt="" class="detail__thumb" />
            <img src="./img/banner1.jpeg" alt="" class="detail__thumb" />
            <img src="./img/banner2.jpeg" alt="" class="detail__thumb" />
          </div>

          <button class="detail__thumb-next">
            <i class="fa-solid fa-chevron-right"></i>
          </button>
        </div>
      </div>

      <!-- Thông tin sản phẩm -->
