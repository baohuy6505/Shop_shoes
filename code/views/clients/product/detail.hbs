<style>
  /* 1. Container chứa các nút để canh lề */
.custom-selection-group {
    display: flex;
    flex-wrap: wrap;
    gap: 10px; /* Khoảng cách giữa các nút */
    margin-bottom: 20px;
}

/* 2. Label bao ngoài: biến con trỏ thành hình bàn tay */
.custom-option-label {
    cursor: pointer;
    user-select: none; /* Chống bôi đen text khi click nhanh */
    margin: 0; /* Reset margin mặc định */
}

/* 3. Ẩn cái nút tròn mặc định xấu xí của radio đi */
.custom-radio-input {
    display: none; 
}

/* 4. Style chung cho cái hộp hiển thị (Span) */
.custom-box {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    
    border: 1px solid #e0e0e0; /* Viền xám nhạt */
    background-color: #fff;
    color: #333;
    
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease-in-out; /* Hiệu ứng mượt khi hover/click */
}

/* --- Style Riêng cho SIZE (Hình vuông bo góc nhẹ) --- */
.size-style {
    min-width: 40px;
    height: 40px;
    padding: 0 5px;
    border-radius: 8px;
}

/* --- Style Riêng cho COLOR (Hình viên thuốc / Pill shape) --- */
.color-style {
    padding: 8px 16px; /* Dài hơn 1 chút */
    border-radius: 20px; /* Bo tròn hẳn */
}

/* 5. Hiệu ứng khi Hover chuột vào (Chưa click) */
.custom-option-label:hover .custom-box {
    border-color: #999;
}

/* 6. QUAN TRỌNG: Trạng thái KHI ĐÃ CHỌN (Checked) */
/* Khi input được check, tìm thẻ .custom-box đứng ngay sau nó để đổi màu */
.custom-radio-input:checked + .custom-box {
    background-color: #000; /* Nền đen */
    color: #fff;            /* Chữ trắng */
    border-color: #000;     /* Viền đen */
    box-shadow: 0 4px 10px rgba(0,0,0,0.2); /* Đổ bóng nhẹ cho nổi bật */
    transform: translateY(-2px); /* Nhảy lên 1 chút tạo cảm giác nhấn */
}
</style>
<!-- Product Detail -->
<section id="detail">
  <div class="container">
    <div class="detail__body">
      <!-- Hình ảnh sản phẩm -->
      <div class="detail__image">
        <div class="detail__main-image">
          <img
            src="{{product.imageUrl}}"
            alt="Ảnh chính sản phẩm"
            class="detail__main-img"
          />
        </div>

        <div class="detail__slider">
          <button class="detail__thumb-prev">
            <i class="fa-solid fa-chevron-left"></i>
          </button>

          <div class="detail__thumb-container">
            <img
