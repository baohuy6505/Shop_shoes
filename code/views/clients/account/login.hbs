 <div class="login__background">
      <form class="login__form" action="/Account/LoginUser" method="POST">
        <a class="login__close" href="/">
          <i class="fa-solid fa-arrow-left"></i
        ></a>
        <h3 class="login__title">LOGIN</h3>

        <label class="login__lb" for="email">Email</label>
        <input
          class="login__inp"
          type="email"
          id="email"
          name="email"
          placeholder="Nhập email"
          required
        />

        <label class="login__lb" for="password">Mật khẩu</label>
        <input
          class="login__inp"
          type="password"
          id="password"
          name="password"
          placeholder="Nhập mật khẩu"
          required
        />

        <button class="login__submit" type="submit">Đăng nhập</button>

        <p class="login__signup-text">
          Chưa có tài khoản? <a href="/Account/Register">Đăng ký ngay</a>
        </p>
      </form>
    </div>