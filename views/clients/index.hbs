    <!-- Styles moved to global style.css -->
  </head>
  <body>
    

    <div class="container my-4">
      <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="https://placehold.co/1200x500/F5A623/FFF?text=Banner+Giày+1"
              class="d-block w-100"
              alt="Banner 1"
            />
          </div>
          <div class="carousel-item">
            <img
              src="https://placehold.co/1200x500/4A90E2/FFF?text=Banner+Giày+2"
              class="d-block w-100"
              alt="Banner 2"
            />
          </div>
          <div class="carousel-item">
            <img
              src="https://placehold.co/1200x500/7ED321/FFF?text=Banner+Giày+3"
              class="d-block w-100"
              alt="Banner 3"
            />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#heroCarousel"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#heroCarousel"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <section class="container my-5">
      <div class="product-section-header">
        <h2 class="fw-bold fs-4 mb-0">Sản phẩm</h2>
        <button class="btn btn-outline-secondary btn-sm filter-btn">
          <i class="fas fa-filter me-1"></i>
          Bộ lọc
        </button>
      </div>

      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
        {{#each featuredProducts}}
          <div class="col">
            <div class="card product-card h-100 shadow-sm border-0 position-relative">
              <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2 px-2 py-1" style="font-size:0.85em;z-index:2;">Nổi bật</span>
              <a href="/product/{{this._id}}" class="text-decoration-none">
                <img src="{{this.imageUrl}}" class="card-img-top img-fluid" alt="{{this.productName}}"
                  style="background:#f8f9fa; border-radius:0.75rem; aspect-ratio:1/1; object-fit:contain; padding:1rem;"
                  onerror="this.onerror=null; this.src='https://placehold.co/300x300/eee/666?text=N/A';" />
              </a>
              <div class="card-body d-flex flex-column px-2 py-3">
                <h5 class="card-title fw-bold text-truncate mb-1">
                  <a href="/product/{{this._id}}" class="text-dark text-decoration-none stretched-link">{{this.productName}}</a>
                </h5>
                <p class="mb-1 text-muted small"><i class="fas fa-tag me-1"></i> Loại: {{this.category.categoryName}}</p>
                {{#if this.shortDescription}}
                  <p class="mb-2 text-muted small"><i class="fas fa-info-circle me-1"></i>{{this.shortDescription}}</p>
                {{/if}}
                <div class="mt-auto">
                  {{#if this.promotionPrice}}
                    <p class="mb-2 text-danger fw-bold fs-5 text-center">
                      <i class="fas fa-bolt me-1"></i>{{formatCurrency this.promotionPrice}}
                      <span class="text-decoration-line-through text-muted ms-2 fs-6">{{formatCurrency this.price}}</span>
                    </p>
                  {{else}}
                    <p class="mb-2 text-primary fw-bold fs-5 text-center"><i class="fas fa-money-bill-wave me-1"></i>{{formatCurrency this.price}}</p>
                  {{/if}}
                  <div class="d-flex gap-2">
                    <a href="/product/{{this._id}}" class="btn btn-outline-primary btn-sm flex-fill">Xem chi tiết</a>
                    <button class="btn btn-success btn-sm flex-fill" type="button"><i class="fas fa-cart-plus me-1"></i>Thêm vào giỏ</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{else}}
          <p class="text-center text-muted col-12">Chưa có sản phẩm nào.</p>
        {{/each}}
      </div>
      <div class="text-center mt-4">
        <a href="/product" class="btn btn-outline-dark">Xem tất cả sản phẩm</a>
      </div>
    </section>
    <script>
      // Kích hoạt Carousel const heroCarousel =
      document.getElementById('heroCarousel'); if(heroCarousel) { const carousel
      = new bootstrap.Carousel(heroCarousel, { interval: 5000, // Tự chuyển ảnh
      sau 5 giây wrap: true }); }
    </script>
  </body>
</html>