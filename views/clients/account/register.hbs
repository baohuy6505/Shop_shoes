<div class="register__background">
  <div class="register__crimson-shadow"></div>
  <form class="register__form" action="/Account/RegisterUser" method="POST">
    <a class="register__close" href="/Account/Register">
      <i class="fa-solid fa-arrow-left"></i></a>
    <h2 class="register__title">REGISTER</h2>
    <label class="login__lb" for="username">Tên người dùng</label>
    <input
      class="login__inp"
      type="text"
      name="username"
      id="username"
      placeholder="Nhập tên người dùng"
      required
    />
    <label class="register__lb" for="email">Email</label>
    <input
      class="register__inp"
      type="email"
      name="email"
      id="email"
      placeholder="Nhập email"
      required
    />

    <label class="register__lb" for="password">Mật khẩu</label>
    <input
      class="register__inp"
      type="password"
      name="password"
      id="password"
      placeholder="Nhập mật khẩu"
      required
    />

    <button class="register__submit" type="submit">Đăng nhập</button>

    <p class="register__signup-text">
      Nếu bạn đã có tài khoản?
      <a href="/Account/Login">Đăng nhập</a>
    </p>
  </form>
</div>